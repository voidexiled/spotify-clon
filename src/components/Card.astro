---
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, artists, color } = playlist;
const artistsString = artists.join(", ");

const style = {
  "--color": color,
} as React.CSSProperties;
---

<a
  href={`/playlist/${id}`}
  class="playlist-item w-40 flex flex-col relative p-2 overflow-hidden gap-4 rounded-md transition-all bg-gradient-to-tl from-dark-weak/60 to-dark-weak/30 hover:bg-dark-weak/100 shadow-dark-weak/10 hover:shadow-dark-weak/20 shadow-sm hover:shadow-md pb-6"
>
  <picture class="aspect-square w-full h-auto flex-none">
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistsString}`}
      class="object-cover w-full h-full rounded-sm transition-all"
    />
  </picture>
  <div class="flex flex-auto flex-col truncate justify-center items-start">
    <h4 class="text-xs text-light-strong font-semibold">
      {title}
    </h4>
    <span class="text-xs text-light-weak">
      {artistsString}
    </span>
  </div>
</a>
