---
import AsideMenu from "@/components/AsideMenu.astro";
import { PlayerBar } from "@/components/PlayerBar";
import { ViewTransitions } from "astro:transitions";
import BottomBar from "@/components/v0/BottomBar.tsx";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="text-sm" ondragstart="return false;" ondrop="return false;">
    <div id="app" class="relative h-screen p-2 gap-2">
      <aside class="[grid-area:aside] flex-col flex overflow-y-auto">
        <AsideMenu />
      </aside>
      <main class="[grid-area:main] rounded-lg overflow-y-auto bg-dark-strong">
        <slot />
      </main>
      <footer class="[grid-area:player] min-h-[60px]">
        <PlayerBar
          client:load
          transition:name="media-player"
          transition:persist
        />
        <!-- <BottomBar /> -->
      </footer>
    </div>
    <style>
      #app {
        display: grid;
        grid-template-areas:
          "aside main main"
          "player player player";
        grid-template-columns: 350px 1fr;
        grid-template-rows: 1fr auto;
      }
    </style>

    <style is:global>
      #navbar {
        /* Estilos por defecto */
        background-color: transparent; /* Cambia al color de fondo inicial */
        transition: background-color 0.3s ease; /* Agrega transici√≥n para suavizar el cambio */
      }

      /* Estilo de fondo cuando se hace scroll */
      #navbar.scrolled-background {
        background-color: #fff; /* Cambia al color de fondo deseado */
        /* Otros estilos cuando se hace scroll, si los necesitas */
      }
      .scrollable::-webkit-scrollbar,
      .scrollable::-webkit-scrollbar-track,
      .scrollable::-webkit-scrollbar-thumb {
        width: 10px;
        height: 10px;
        background: #000;
      }
      main {
        --scrollbarBG: #010101;
        --thumbBG: #1f1f1f;
      }
      html {
        font-family: "CircularStd", system-ui, sans-serif;
        font-smooth: antialiased;
        background: #000;
        color: white;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Book.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Light.woff2") format("woff2");
        font-weight: 300;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Black.woff2") format("woff2");
        font-weight: 900;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
